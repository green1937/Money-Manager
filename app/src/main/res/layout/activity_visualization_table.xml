<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6EF"
    tools:context=".MainActivity">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menu"
        android:src="@drawable/menu"
        android:padding="8dp"
        android:background="#FFD1A9"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainTitle"
        android:text="    Визуализация"
        android:textColor="#663910"
        android:textSize="27dp"
        android:textStyle="bold"
        android:padding="6dp"
        android:background="#FFD1A9"
        android:layout_toRightOf="@+id/menu"/>

    <Button
        android:id="@+id/filterBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Фильтрация"
        android:textSize="17dp"
        android:layout_below="@+id/mainTitle"
        android:layout_alignParentLeft="true"
        android:backgroundTint="#FFA727"
        android:layout_marginStart="20dp"
        android:paddingHorizontal="50dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yesBtn"
        android:src="@drawable/yes"
        android:layout_below="@+id/mainTitle"
        android:layout_toLeftOf="@+id/noBtn"
        android:backgroundTint="#FFF6EF"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noBtn"
        android:src="@drawable/no"
        android:layout_below="@+id/mainTitle"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#FFF6EF"
        android:layout_alignParentRight="true"/>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/filterBtn"
        android:stretchColumns="1,2,3">

        <TableRow>
            <TextView
                android:text="Дата"
                android:textSize="16dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_column="1"
                android:gravity="center"/>
            <TextView
                android:text="Категория"
                android:textSize="16dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_column="2"
                android:gravity="center"/>
            <TextView
                android:text="Сумма"
                android:textSize="16dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_column="3"
                android:gravity="center"/>
        </TableRow>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </TableLayout>

</RelativeLayout>