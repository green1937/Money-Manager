<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6EF"
    tools:context=".MainActivity"
    android:scrollbars="vertical">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu"
            android:src="@drawable/menu"
            android:padding="8dp"
            android:background="#FFD1A9"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainTitle"
            android:text="    Визуализация"
            android:textColor="#663910"
            android:textSize="27dp"
            android:textStyle="bold"
            android:padding="6dp"
            android:background="#FFD1A9"
            android:layout_toRightOf="@+id/menu"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mainTitle"
        android:id="@+id/scroll">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/filterBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Фильтрация"
                    android:textSize="17dp"
                    android:backgroundTint="#FFA727"
                    android:layout_marginLeft="20dp"
                    android:paddingHorizontal="45dp"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/yesBtn"
                    android:src="@drawable/yes"
                    android:layout_toLeftOf="@+id/noBtn"
                    android:backgroundTint="#FFF6EF"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/noBtn"
                    android:src="@drawable/no"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="#FFF6EF"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <com.github.mikephil.charting.charts.PieChart
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/cyrcleDiagram"
                />
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/graph"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginVertical="10dp"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>

