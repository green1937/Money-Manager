<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFECDD"
    tools:context=".AddExpenseActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainTitle"
            android:text="Добавление"
            android:textColor="#663910"
            android:textSize="27dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="6dp"
            android:background="#FFD1A9"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_corner">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/priceinput"
                android:inputType="number"
                android:hint="Сумма"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textSize="25dp"
                android:textStyle="italic"
                android:background="@color/white" />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/categoryinput"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textSize="25dp"
                android:textStyle="italic"
                android:background="@color/white" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/descriptioninput"
                android:inputType="textMultiLine"
                android:lines="8"
                android:minLines="6"
                android:gravity="start"
                android:maxLines="10"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textSize="25dp"
                android:hint="Описание"
                android:background="@color/white"
                android:radius="80dp"
                android:textStyle="italic"/>

            <EditText
                android:id="@+id/timenotetext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calendarView1"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:textSize="25dp"
                android:textStyle="italic"
                android:text="Выберите дату"
                android:background="@color/white"/>


            <CalendarView
                android:id="@+id/calendarView1"
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/photoBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Прикрепить фото"
                android:padding="0dp"
                android:layout_margin="10dp"
                android:textSize="25dp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:backgroundTint="#FFCB80"
                />
            <ImageView
                android:id="@+id/photoInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                />



            <!--<EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/placeinworldinput"
                android:hint="Место на карте"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textSize="25dp"
                android:textStyle="italic"
                android:background="@color/white"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#DA880E"
                android:layout_gravity="center"
                android:id="@+id/mapbtn"
                android:text="Указать место на карте"
                android:textSize="23dp"
                android:layout_margin="10dp"/> -->

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/savebtn"
            android:backgroundTint="#FFA727"
            android:layout_gravity="center"
            android:text="Сохранить"
            android:textSize="25dp"
            android:layout_marginTop="20dp"/>



    </LinearLayout>
</ScrollView>