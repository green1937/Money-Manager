<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFECDD"
    tools:context=".ExpensesAnalysisActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/menu"
                android:src="@drawable/menu"
                android:padding="8dp"
                android:background="#FFD1A9"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mainTitle"
                android:text="    Анализ расходов"
                android:textColor="#663910"
                android:textSize="27dp"
                android:textStyle="bold"
                android:padding="6dp"
                android:background="#FFD1A9"
                android:layout_toRightOf="@+id/menu"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Текущий период"
            android:textSize="24dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Бюджет"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginTop="5dp"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/currPeriodBudget"
            android:background="@color/white"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:hint="сумма"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Общая сумма расходов"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginTop="5dp"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/currPeriodExpPrice"
            android:background="@color/white"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:hint="сумма"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Информация по периоду"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/currPeriodInfo"
            android:background="@color/white"
            android:layout_marginHorizontal="20dp"
            android:textSize="20dp"
            android:hint="Анализ периода"
            android:textStyle="italic"/>



    </LinearLayout>
</ScrollView>