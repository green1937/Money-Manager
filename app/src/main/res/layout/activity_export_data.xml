<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6EF"
    tools:context=".ExportDataActivity">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menu"
        android:src="@drawable/menu"
        android:padding="8dp"
        android:background="#FFD1A9"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainTitle"
        android:text="    Экспорт"
        android:textColor="#663910"
        android:textSize="27dp"
        android:textStyle="bold"
        android:padding="6dp"
        android:background="#FFD1A9"
        android:layout_toRightOf="@+id/menu"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:text="Выберите расширение файла для экспорта истории расходов"
        android:layout_below="@+id/menu"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:id="@+id/fileinput"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="17dp"
        android:textStyle="italic"
        android:background="@color/white" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/saveFileBtn"
        android:backgroundTint="#FFA727"
        android:layout_gravity="center"
        android:text="Экспортировать"
        android:textSize="17dp"
        android:layout_marginHorizontal="50dp"
        android:layout_below="@+id/fileinput"/>


</RelativeLayout>